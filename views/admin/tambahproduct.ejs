<% include adminHead%>
<form method="post" action="/tambah" enctype="multipart/form-data">

    <div class="row">
      <div class="input-field col s12">
          <input  type="text" name="name">
          <label for="email">Nama Produk</label>
        </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
          <input  type="text" name="harga">
          <label for="email">Harga Produk</label>
        </div>
    </div>
    <div class="row">
      <select class="input-field col s12">
      <option value="" disabled selected>Pilih sesuai kondisi barang</option>
      <option value="1">Baru</option>
      <option value="2">Bekas</option>
      </select>
    </div>
    <div class="row">
      <div class="input-field col s12">
          <input  type="text" name="detail">
          <label for="email">Detail Produk</label>
        </div>
    </div>
    <div class="row">
        <div class="col col-sm-4 col-md-2 col-lg-2"><label for="gambar">Gambar Produk:</label></div>
        <div class="col col-sm-8 col-md-14 col-lg-14" ><input type="file" name="gambar" class="btn btn-default"></div>
    </div>

    <div>
      <input type="submit" value="Tambah Produk" class="btn btn-default red">
    </div>
</form>
<div>
  <table class="bordered">
        <thead>
          <tr>
              <th>Gambar</th>
              <th>Name Produk</th>
              <th>Harga Produk</th>
              <th>Deskripsi Produk</th>
              <th>Detail Produk</th>
              <th>Tanggal Input</th>
              <th>Action</t>
          </tr>
        </thead>
        <% for(var i=0; i<data.length; i++) {%>
        <tbody>
          <tr>
            <td>
              <img  src="/<%=data[i].gambar%>" alt="" style="width:50px;height:50px;" class="responsive-img 20px"/>
            </td>
            <td><%= data[i].name %></td>
            <td><%= data[i].harga %></td>
            <td><%= data[i].deskripsi %></td>
            <td><%= data[i].detail %></td>
            <td><%= data[i].tanggal %></td>
            <td><a href="/<%=data[i].id%>" class="btn btn-floating red">Del</a></td>
            <td><a href="/<%=data[i].id%>" class="btn btn-floating yellow">Edit</a></td>

          </tr>
          <% } %>
        </tbody>
      </table>

</div>

<% include adminFoot%>
